@model IEnumerable<Ingredient>
@{
    ViewBag.Title = "List of restaurant Ingredients";
}



<h1>Ingredients</h1>

<a asp-action="Create" class="btn btn-primary">Create New Ingredient</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.Name)
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach(Ingredient i in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => i.Name)
                    </td>
                    <td>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@i.IngredientId">Details</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@i.IngredientId">Delete</a>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@i.IngredientId">Edit</a>
                    </td>
                </tr>
            }
    </tbody>
</table>